<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Reflections</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400..900&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="/styles.css" />
	</head>
	<body data-user-logged-in="<%= user ? 'true' : '' %>" data-has-sculpture="<%= typeof hasSculpture !== 'undefined' ? hasSculpture : false %>">
		<%- include('partials/filters') %>
		<!-- <div id="bgImage"></div> -->
		<video
			id="background-video"
			autoplay
			loop
			muted
			playsinline
			style="position: fixed; right: 0; bottom: 0; min-width: 100vw; min-height: 100vh; z-index: -1; object-fit: cover">
			<source src="/smokeBackground.mp4" type="video/mp4" />
			Your browser does not support the video tag.
		</video>
		<%- include('partials/navPopup', { currentPage }) %> <%- include('partials/header', { user, currentPage }) %> <%- body %> <%-
		include('partials/footer') %>

		<!-- Only load polygon-offset on pages that need it -->
		<!-- <% if (currentPage === 'shards') { %>
		<script src="https://cdn.jsdelivr.net/npm/polygon-offset@1.0.0/index.min.js"></script>
		<% } %> -->

		<!-- <script type="module">
			src = "https://cdn.jsdelivr.net/npm/@xenova/transformers@2.17.2";
		</script> -->
		<script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
		<script src="/FxFilter.js" onerror="console.log('FxFilter.js not found - skipping FX effects')"></script>
		<script type="module" src="/main.js"></script>
	</body>
</html>
